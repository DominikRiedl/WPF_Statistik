<Window x:Class="WPF_Statistik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Statistik"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}">
        </DataGrid>
        <Canvas>
            <Border BorderBrush="Black" BorderThickness="2" Canvas.Left="18" Canvas.Bottom="15">                
                <Rectangle Fill="White" Height="200" Width="760"/>
            </Border>
        </Canvas>
    </Grid>
</Window>
